        <h1>You wanto delete category</h1>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" id="btn-deletecategory" class="btn btn-primary">Delete</button>
      </div>
    </div>
  </div>
