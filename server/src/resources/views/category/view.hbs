{{!--Hidend form--}}
<form name="DeleteForm" method="POST"></form>

<script language="JavaScript">
 
  document.addEventListener('DOMContentLoaded',function(){
  var categoryID;
  var deleletForm = document.forms['DeleteForm']
  var btnDelete = document.getElementById('btn-deletecategory');

  $('#DeleteCategory').on('show.bs.modal', function (event) {

  var button = $(event.relatedTarget) ;
  categoryID = button.data('id') ;

});
    btnDelete.onclick = function() {
    deleletForm.action= '/category/' + categoryID +'?_Method=DELETE';
    deleletForm.submit();
  }
});
</script>

